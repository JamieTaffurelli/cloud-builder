{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "resourceGroupName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Resource Group that you wish to create."
      }
    },
    "location": {
      "type": "string",
      "allowedValues": ["northeurope", "westeurope"],
      "metadata": {
        "description": "The location to deploy the Resource Group to"
      }
    },
    "tags": {
      "type": "object"
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('resourceGroupName')]",
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2020-06-01",
      "location": "[parameters('location')]",
      "tags": "[parameters('tags')]",
      "properties": {}
    }
  ],
  "outputs": {
    "resourceGroup": {
      "type": "object",
      "value": "[reference(resourceId('Microsoft.Resources/resourceGroups', parameters('resourceGroupName')), '2020-06-01', 'Full')]"
    }
  }
}
